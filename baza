import discord
from discord.ext import commands

intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='$', intents=intents)
CENSORED_WORDS = ["fook", "fooking",]

@bot.event
async def on_ready():
    print(f'We have logged in as {bot.user}')

@bot.command()
async def hello(ctx):
    await ctx.send(f'ку')

@bot.command()
async def heh(ctx, count_heh = 5):
    await ctx.send("he" * count_heh)

@bot.event
async def on_message(message):
    for content in message.content.split():
        for censored_word in CENSORED_WORDS:
            if content == censored_word:
                await message.delete()
                await message.channel.send(f"{message.author.mention} атата по попе за такие слова!")

bot.run("MTE0NDk2MDE0NjQxODcwMDM0OA.Gb9PQE.TLduL_NpcdWe4hJX-4YDoS0GfbSqc5zXw81GAc")
